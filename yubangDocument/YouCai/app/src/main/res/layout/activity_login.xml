<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tec.android.ui.LoginActivity">



    <LinearLayout
        android:orientation="vertical"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <FrameLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip">
                <View
                    android:background="@color/gray_line_3"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip" />
            </LinearLayout>
            <TextView
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/login_bg_color"
                android:padding="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="支持的登录方式" />
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip">
            <TextView
                android:textColor="@color/grey"
                android:gravity="center" android:id="@+id/login_by_weixin"
                android:padding="10.0dip" android:layout_width="0.0dip"
                android:layout_height="wrap_content" android:text="微信"
                android:drawableTop="@drawable/login_weixin_selector"
                android:layout_weight="1.0" />
            <TextView
                android:textColor="@color/grey"
                android:gravity="center" android:id="@+id/login_by_qq"
                android:padding="10.0dip" android:layout_width="0.0dip"
                android:layout_height="wrap_content" android:text="QQ"
                android:drawableTop="@drawable/login_qq_selector"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
