<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4e7e9"
    tools:context="com.tec.android.ui.ChoosePaymentMethodActivity">

    <RelativeLayout
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="49.5dip">
        <ImageView
            android:id="@+id/titleBg"
            android:background="@drawable/common_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_back"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/common_title_back_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:maxWidth="180.0dip"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/common_layout_title"
            android:textSize="20sp"
            android:text="选择支付方式"
            />
    </RelativeLayout>


    <!-- 微信 -->
    <RelativeLayout
        android:id="@+id/iwant_get_cash_account_weixin_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/common_title"

        >
        <RelativeLayout
            android:id="@+id/iwant_get_cash_account_weixin_wallet_layout"
            android:background="@drawable/iwant_get_cash_account_item_bg_selector"
            android:paddingLeft="23.0dip"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="43.0dip">
            <TextView
                android:id="@+id/iwant_get_cash_account_weixin_wallet"
                android:background="@mipmap/wx_payment"
                android:padding="5.0dip" android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <TextView
                android:textSize="15.0sp"
                android:textColor="@color/black"
                android:id="@+id/iwant_get_cash_account_weixin_text"
                android:paddingLeft="15.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:layout_toRightOf="@+id/iwant_get_cash_account_weixin_wallet"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/iwant_get_cash_account_weixin_arrow"
                android:paddingRight="20.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/android_list_idex"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>




    </RelativeLayout>



    <!-- 支付宝 -->
    <RelativeLayout
        android:id="@+id/iwant_get_cash_account_alipay_layout"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iwant_get_cash_account_weixin_layout"

        >
        <RelativeLayout
            android:id="@+id/iwant_get_cash_account_alipay_wallet_layout"
            android:background="@drawable/iwant_get_cash_account_item_bg_selector"
            android:paddingLeft="23.0dip"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="43.0dip">
            <TextView
                android:id="@+id/iwant_get_cash_account_alipay_wallet"
                android:background="@mipmap/alipay_payment"
                android:padding="5.0dip" android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <TextView
                android:textSize="15.0sp"
                android:textColor="@color/black"
                android:id="@+id/iwant_get_cash_account_alipay_text"
                android:paddingLeft="15.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:layout_toRightOf="@+id/iwant_get_cash_account_alipay_wallet"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/iwant_get_cash_account_alipay_arrow"
                android:paddingRight="20.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/android_list_idex"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>



    </RelativeLayout>




</RelativeLayout>
