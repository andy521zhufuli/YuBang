<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="com.tec.android.ui.SocialShareActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF868686"
        android:textSize="18sp"
        android:text="分享到"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/social_share_layout"
        />


    <LinearLayout
        android:id="@+id/social_share_layout"
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:background="#FFE9E9E9"
        android:layout_above="@+id/pop_layout_select_pic1"
        >

        <RelativeLayout
            android:id="@+id/social_share_qq_share_textview"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_firstpage_foot1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/social_share_qq_friens"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/social_share_wx_share_textview"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_firstpage_foot2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/social_share_wx_friens"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/social_share_qqzone_share_textview"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_firstpage_foot3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/social_share_qq_zone"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/social_share_wx_friends_share_textview"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_firstpage_foot4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/social_share_wx_friens_quan"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/pop_layout_select_pic1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/social_share_text_cancle"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/shape_popup"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="取消"
            android:textColor="#ff006cff"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>




</RelativeLayout>
