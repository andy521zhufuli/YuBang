<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/shoping_cart_user_no_login_tips" android:background="@color/transparent"
    android:clickable="true" android:layout_width="fill_parent" android:layout_height="50.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:id="@+id/shoping_cart_top_menu" android:background="@color/transparent"
        android:layout_width="fill_parent" android:layout_height="50.0dip">
        <LinearLayout
            android:id="@+id/shopping_cart_show_view"
            android:background="#FFE4E4E4" android:layout_width="fill_parent"
            android:layout_height="50.0dip" android:baselineAligned="false"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:paddingRight="2.0dip"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2.1">
                <TextView
                    android:textSize="@dimen/cart_count_price_tv_textsize"
                    android:textColor="#FF333333"
                    android:id="@+id/cart_count_price_tv" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="6.0dip"
                    android:singleLine="true"
                    android:text="共"
                    />
                <TextView
                    android:textSize="@dimen/cart_count_price_tv_textsize"
                    android:textColor="#ffe2006c"
                    android:id="@+id/cart_count_price_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="6.0dip"
                    android:layout_toRightOf="@+id/cart_count_price_tv"
                    android:singleLine="true"
                    android:text="3"
                    />
                <TextView
                    android:textSize="@dimen/cart_count_price_tv_textsize"
                    android:textColor="#FF333333"
                    android:id="@+id/cart_count_price_tv2" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="6.0dip"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/cart_count_price_tv1"
                    android:text="件 实付 : "
                    />
                <TextView
                    android:textSize="@dimen/cart_count_price_tv_textsize"
                    android:textColor="#FFe2006c"
                    android:id="@+id/cart_count_price_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/cart_count_price_tv2"
                    android:text="¥"
                    />



                <TextView
                    android:textSize="14sp"
                    android:textColor="#ff999999"
                    android:ellipsize="none"
                    android:id="@+id/conform_order_order_id_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/cart_count_price_tv" android:layout_alignLeft="@+id/cart_count_price_tv"
                    android:lineSpacingMultiplier="1.1"
                    android:layout_alignParentBottom="true"
                    android:text="订单号 : "
                    />
            </RelativeLayout>

            <!-- 缺人订单-->
            <RelativeLayout
                android:id="@+id/conform_order_btn_layout"
                android:background="@drawable/conform_order_but_selector"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:layout_weight="3.5">
                <TextView
                    android:textSize="@dimen/cart_settle_accounts_but_textsize"
                    android:textColor="@color/white"
                    android:id="@+id/conform_order_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认订单"
                    android:singleLine="true"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>