<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tec.android.ui.ConformGetCashInfoActivity">

    <!-- 确认提现信息-->
    <!-- common_title -->
    <RelativeLayout
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="49.5dip">
        <ImageView
            android:id="@+id/titleBg"
            android:background="@drawable/common_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_back"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/common_title_back_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:maxWidth="180.0dip"
            android:singleLine="true"
            android:text="确认提现信息"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/common_layout_title"
            />
    </RelativeLayout>


    <!-- 支付宝账户-->
    <LinearLayout
        android:id="@+id/conform_get_cash_info_layout"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_title"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/conform_get_cash_info_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="陈小雨"
            android:textSize="20sp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/conform_get_cash_info_bank_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="中国银行"
            android:textSize="15sp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/conform_get_cash_info_bankcard_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="卡号:3265 4654 6454 2545"
            android:textSize="15sp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/conform_get_cash_info_money_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="￥4999.00"
            android:textSize="20sp"
            android:padding="2dp"
            />


    </LinearLayout>




    <!-- 下一步  这个可以做成是调到下一个activity  而不是一个下拉-->
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/conform_get_cash_info_conform_layout"
        android:padding="20.0dip"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conform_get_cash_info_layout"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:textSize="17.0sp"
            android:textColor="@drawable/button_b_font_color"
            android:id="@+id/conform_get_cash_info_conform_button"
            android:background="@drawable/button_b"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:text="确认提现" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conform_get_cash_info_conform_layout"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险提示："
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.为了保障您的资金安全，请仔细检查账户信息！"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.体现申请一经提交，不得取消！"
            android:padding="5dp"
            />
    </LinearLayout>







</RelativeLayout>
