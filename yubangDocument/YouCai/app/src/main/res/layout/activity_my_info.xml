<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE3E6EA"
    tools:context="com.tec.android.ui.MyInfoActivity">

    <RelativeLayout
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="49.5dip">
        <ImageView
            android:id="@+id/titleBg"
            android:background="@drawable/common_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_back"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/common_title_back_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/save"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:paddingRight="10dp"
            android:textColor="#ffec0062"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:maxWidth="180.0dip"
            android:singleLine="true"
            android:text="修改资料"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/common_layout_title"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/common_title"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/my_info_image_layout">
        <!-- 头像 -->
        <com.tec.android.view.RoundImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dp"
            android:src="@mipmap/girl"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_info_modify_account_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/my_info_image_layout"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/my_info_modify_account_textview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@color/white"
            android:text="账户:"
            android:textColor="#ff999999"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
        <EditText
            android:ems="10"
            android:id="@+id/my_info_modify_account_editview"
            android:text="1111111(QQ用户)"
            android:textColor="#ff333333"
            style="@style/et_base_new"
            android:enabled="false"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_info_modify_nickname_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/my_info_modify_account_ll"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/my_info_modify_nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@color/white"
            android:text="昵称:"
            android:textColor="#ff999999"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/my_info_modify_nickname_editview"
            android:ems="10"
            android:text="陈小雨"
            android:textColor="#ff333333"
            style="@style/et_base_new"
            android:enabled="false"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_info_modify_mobilephone_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/my_info_modify_nickname_ll"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/my_info_modify_mobilephone_textview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@color/white"
            android:text="手机:"
            android:textColor="#ff999999"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/my_info_modify_mobilephone_editview"
            android:textSize="@dimen/BasicTextSize"
            android:textColorHint="@color/grey"
            android:layout_height="45dp"
            android:layout_width="fill_parent"
            android:paddingLeft="5dp"
            android:layout_marginTop="1px"
            android:text="点击设置电话号码"
            android:textColor="#ff333333"
            android:gravity="center_vertical"
            android:background="@drawable/common_settings_item_bg_selector"
            android:drawableRight="@mipmap/app_network_arrow"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

</RelativeLayout>
