<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/clicked_shop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_item_bottom"
            >

            <TextView
                android:id="@+id/item_clicked_shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1"
                android:textStyle="bold"
                android:layout_marginLeft="18dp"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/pd_red"
                />

            <LinearLayout
                android:id="@+id/item_clicked_shop_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/item_clicked_shop_num"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_clicked_shop_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@mipmap/mendian"

                    />

                <TextView
                    android:id="@+id/item_clicked_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高德汇001"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/item_clicked_shop_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/item_clicked_shop_ll"
                android:orientation="vertical"
                android:layout_marginLeft="26dp"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/item_clicked_shop_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.88"
                    android:textStyle="bold"
                    android:textColor="@color/pd_red"
                    android:drawableRight="@mipmap/click_shop_phone"
                    />
                <TextView
                    android:id="@+id/item_clicked_shop_level"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="5级"
                    />
                <!-- 多少单-->
                <TextView
                    android:id="@+id/item_clicked_shop_dan_num"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="168单"
                    />
            </LinearLayout>



            <TextView
                android:id="@+id/clicked_shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.88KM"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>