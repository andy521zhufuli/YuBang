<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context=".MineFragment" >

    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        style="@style/TopbarStyle" >

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="驭帮"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_category_topbar" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- 没有登录的时候显示  还没登录 点击登录-->
            <RelativeLayout
                android:id="@+id/layout_not_logined"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/my_personal_not_login_bg"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="还没有登录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_medium_text_size" />

                    <Button
                        android:id="@+id/personal_login_button"
                        android:layout_width="90dp"
                        android:layout_height="36dp"
                        android:layout_below="@+id/tv_login"
                        android:layout_marginTop="6dp"
                        android:background="@mipmap/my_personal_click_login"
                        android:gravity="center"
                        android:text="登录/注册"
                        android:textColor="@color/login_button"
                        android:textSize="@dimen/small_medium_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
            <!-- 已经登录的时候显示-->
            <RelativeLayout
                android:id="@+id/layout_logined"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/personel_user_head_bg"
                android:clickable="true"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/login_user_icon_bg_new"
                    android:padding="3dp"
                    android:src="@mipmap/login_dog" />

                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/user_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/user_icon"
                    android:singleLine="true"
                    android:text="张  三"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_uid"
                    android:layout_centerVertical="true"
                    android:text="VIP"
                    android:textColor="@color/pd_red"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"
                android:orientation="vertical" >
                <!-- 我推荐的合伙人-->
                <LinearLayout
                    android:id="@+id/my_layout_partner_i_recommended"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_top" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order"
                        />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我推荐的合伙人"
                        android:textColor="@color/red"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>
            </LinearLayout>
            <!-- 我的钱包 我的订单-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/my_layout_mine_wallet"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_bottom" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order"
                        />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我的钱包"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_layout_mine_order"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_top" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order"
                        />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="全部订单"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"
                android:orientation="vertical" >
                <!-- 我的特权-->
                <LinearLayout
                    android:id="@+id/my_layout_mine_privilege"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_top" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order"
                        />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我的特权"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>
                <!-- 我的发布-->
                <LinearLayout
                    android:id="@+id/my_layout_mine_publish"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_center" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我的发布"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>
                <!-- 我的会员-->
                <LinearLayout
                    android:id="@+id/my_layout_mine_member"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_bottom" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我的会员"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"
                android:orientation="vertical" >
                <!-- 我要分享-->
                <LinearLayout
                    android:id="@+id/my_layout_i_want_share"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item_top" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我要分享"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_bottom"
                android:layout_marginTop="@dimen/item_margin_top"
                android:orientation="vertical" >
                <!-- 设置-->
                <LinearLayout
                    android:id="@+id/my_layout_mine_setting"
                    style="@style/MineItemStyle"
                    android:background="@drawable/bg_item" >

                    <ImageView
                        android:layout_width="26.0dip"
                        android:layout_height="26.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="15.0dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/android_personel_quickly_order" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="设置"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/personel_arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>