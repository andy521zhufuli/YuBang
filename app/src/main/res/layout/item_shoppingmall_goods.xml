<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- 物品-->
    <RelativeLayout
        android:id="@+id/iwant_get_cash_account_weixin_account_layout"
        android:layout_marginTop="20dp"
        android:paddingLeft="23.0dip"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="43.0dip">
        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/black"
            android:id="@+id/iwant_get_cash_account_weixin_account_text"
            android:paddingLeft="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保养维护"
            android:layout_centerVertical="true" />

        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/black"
            android:id="@+id/discover_activity_recommend_partners_account_text1"
            android:paddingLeft="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:layout_toLeftOf="@+id/iwant_get_cash_account_weixin_account_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iwant_get_cash_account_weixin_account_arrow"
            android:paddingRight="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/android_list_idex"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="主打产品1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="主打产品2"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品3"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品4"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品5"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品6"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>