<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context="com.car.yubangapk.ui.MyCommissionDetailActivity">

    <!-- 头部显示-->
    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:paddingRight="30dp"
            android:layout_margin="6dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="邀请佣金明细"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/yongjin1"
        android:layout_below="@+id/layout_login_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/yongjin_detail1"/>

    <ImageView
        android:id="@+id/yongjin2"
        android:layout_below="@+id/yongjin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/yongjin_detail_2"/>

    <ListView
        android:id="@+id/yongjin_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ></ListView>


</RelativeLayout>
