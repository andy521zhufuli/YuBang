<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />

        <RelativeLayout
            android:id="@+id/layout_clear_cache"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/image_service"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_order_detail_guzhangjiance"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/text1_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toRightOf="@+id/image_service"
                android:text="故障描述"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/text_17" />
        </RelativeLayout>
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />
        <TextView
            android:id="@+id/guzhang_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述故障描述"
            android:textSize="@dimen/text_14"
            android:textColor="@color/gray_order_desc"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />

        <RelativeLayout
            android:id="@+id/layout_clear_cache1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/image_service1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_order_detail_jiance_result"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/text1_service1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toRightOf="@+id/image_service1"
                android:text="检测结果"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/text_17" />
        </RelativeLayout>
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />
        <TextView
            android:id="@+id/jiance_jieguo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="检测结果"
            android:textSize="@dimen/text_14"
            android:textColor="@color/gray_order_desc"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />

        <RelativeLayout
            android:id="@+id/layout_clear_cache11"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/image_service11"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_order_detail_weixiu_yijian"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/text1_service11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toRightOf="@+id/image_service11"
                android:text="维修建议"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_order"
                android:textSize="@dimen/text_17" />
        </RelativeLayout>
        <!-- 分割线-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/liuliu_border" />
        <TextView
            android:id="@+id/weixiu_jianyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="维修建议"
            android:textSize="@dimen/text_14"
            android:textColor="@color/gray_order_desc"
            />
    </LinearLayout>

</LinearLayout>