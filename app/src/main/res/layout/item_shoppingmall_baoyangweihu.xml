<?xml version="1.0" encoding="utf-8"?>
<!-- 保养维护  整个-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff"
    >
    <!-- 保养维护  更多-->
    <RelativeLayout
        android:id="@+id/iwant_get_cash_account_weixin_account_layout"
        android:paddingLeft="23.0dip"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="43.0dip"
        android:background="#FFFFFFFF"
        >
        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/holo_green_dark"
            android:id="@+id/iwant_get_cash_account_weixin_account_text"
            android:paddingLeft="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保养维护"
            android:layout_centerVertical="true" />

        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/baoyangweihu"
            android:id="@+id/discover_activity_recommend_partners_account_text1"
            android:paddingLeft="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:layout_toLeftOf="@+id/shoppingmall_more_01"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/shoppingmall_more_01"
            android:paddingRight="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/android_list_idex"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        style="@style/line_vertical"
        />
    <!-- 保养维护 一行显示两个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/main_product1_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/shoppingmall_baoyang_01"
            android:gravity="center"
            />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/line_vertical" />
        <ImageView
            android:id="@+id/main_product1_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@mipmap/shoppingmall_baoyang_02"
            />
    </LinearLayout>
    <!-- 保养维护 一行显示四个-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        style="@style/line_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_product1_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/shoppingmall_baoyang_03"
            android:gravity="center"
            />
        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/line_vertical" />
        <ImageView
            android:id="@+id/main_product1_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/shoppingmall_baoyang_04"
            android:gravity="center"
            />
        <View android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/line_vertical" />
        <ImageView
            android:id="@+id/main_product1_05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/shoppingmall_baoyang_05"
            android:gravity="center"
            />
        <View android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/line_vertical" />
        <ImageView
            android:id="@+id/main_product1_06"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/shoppingmall_baoyang_06"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        style="@style/line_vertical"
        />

    <ImageView
        android:id="@+id/main_product_ad_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@mipmap/shoppingmall_ad_01"
        android:scaleType="fitXY"
        />
</LinearLayout>