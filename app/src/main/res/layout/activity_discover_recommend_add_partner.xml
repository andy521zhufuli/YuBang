<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context="com.car.yubangapk.ui.DiscoverRecommendAddPartnerActivity">


    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_margin="6dp"
            android:paddingRight="30dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="推荐合伙人"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/add_partner_scrollview"
        android:layout_below="@+id/layout_category_topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/add_partner_llayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/recommend_partner_comment1"
                />
            <!-- 店铺靓照-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/gray"
                android:text="店铺靓照"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/add_photo_shop"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_photo"
                    />

                <TextView
                    android:layout_below="@+id/add_photo_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=" "
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    />

                <Button
                    android:id="@+id/add_photo_save_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>



            <!-- 营业执照-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/gray"
                android:text="营业执照"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/add_photo_yingyezheng"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_photo"
                    />

                <TextView
                    android:layout_below="@+id/add_photo_yingyezheng"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=" "
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    />

                <Button
                    android:id="@+id/add_photo_save_yingjiezheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>

            <!-- 法人身份证-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/gray"
                android:text="法人身份证"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/add_photo_id_card"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_photo"
                    />

                <TextView
                    android:layout_below="@+id/add_photo_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=""
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    />

                <Button
                    android:id="@+id/add_photo_save_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>


            <!-- 店铺位置-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/gray"
                android:text="店铺位置"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:visibility="gone"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/add_photo_shop_location"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_photo"
                    />

                <TextView
                    android:layout_below="@+id/add_photo_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=" "
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    />

                <Button
                    android:id="@+id/add_photo_save_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/item_margin_large"
                android:background="@drawable/btn_ok"
                android:text="保  存"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>
