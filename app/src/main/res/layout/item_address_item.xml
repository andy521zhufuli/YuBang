<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@+id/my_address_layout" android:background="#fff3f3f3"
    android:paddingTop="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/xinfen1"
        android:background="@drawable/xinfen"
        android:layout_width="fill_parent" android:layout_height="5.0px" />


    <RelativeLayout android:gravity="fill"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:background="@color/white"
        android:paddingTop="10.0dip" android:paddingBottom="10.0dip"
        android:layout_width="match_parent" android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/line"
            android:id="@+id/relatalayout_address_item"
            android:clickable="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:ellipsize="end" android:id="@+id/tv_address_item_name"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15.0dip" android:text="肖童"
                android:singleLine="true" android:maxLength="8"
                android:layout_alignParentLeft="true" />
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:id="@+id/tv_address_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\ 15834344564"
                android:layout_centerInParent="true"
                android:maxLength="13"
                android:layout_toRightOf="@+id/tv_address_item_name" />
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:id="@+id/tv_address_item_default"
                android:background="#fff57c33"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="默认"
                android:layout_toRightOf="@+id/tv_address_item_phone" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/text_address"
                android:gravity="left" android:layout_gravity="left"
                android:visibility="gone"
                android:id="@+id/tv_address_item_address" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip" android:layout_marginRight="15.0dip"
                android:text="上海市闵行区沪闵路7866号大" android:layout_below="@+id/tv_address_item_name" />
        </RelativeLayout>


        <View android:id="@+id/line" android:background="#ffe3e3e3"
            android:layout_width="1.0dip" android:layout_height="40.0dip"
            android:layout_marginRight="5.0dip" android:layout_toLeftOf="@+id/modify_address_layout"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/modify_address_layout"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/set_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/ico_editaddress" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView android:id="@+id/xinfen2" android:background="@drawable/xinfen"
        android:layout_width="fill_parent" android:layout_height="5.0px" />
</LinearLayout>