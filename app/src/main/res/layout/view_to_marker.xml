<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/bg_rectangle_with_stroke_only_marker_bg"

    >

    <TextView
        android:id="@+id/marker_shop_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:textSize="@dimen/large_text_size"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/bg_view_to_marker_circle_number"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        />

    <TextView
        android:id="@+id/marker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:text="中海维修"
        android:padding="3dp"
        android:layout_gravity="center_vertical"
        />


    <ImageView
        android:id="@+id/marker_shop_image_style"
        android:layout_width="30dp"
        android:layout_marginLeft="3dp"
        android:layout_height="match_parent"
        android:src="@mipmap/marker_car_1"
        android:scaleType="center"
        />


</LinearLayout>