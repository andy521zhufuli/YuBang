<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.car.yubangapk.ui.ClientServiceActivity">

    <include
        android:id="@+id/header_service"
        layout="@layout/yubang_page_header"/>

    <TextView
        android:id="@+id/service_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击拨打客服热线"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_below="@+id/service_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13800138000"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="35sp"
        />
</RelativeLayout>
