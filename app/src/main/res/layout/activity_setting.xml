<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context=".MoreActivity" >

    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_login_topbar"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/layout_location"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="设置地理位置信息"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:src="@mipmap/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="亮度调节"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:src="@mipmap/personel_arrow_right" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2G/3G网络手动下载图片"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:src="@mipmap/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="WIFI环境下自动升级客户端"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:src="@mipmap/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_clear_cache"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="清除本地缓存"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:text="41.43M"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_about_version"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/bg_item_bottom"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="关于"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="V4.0.0"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:src="@mipmap/personel_arrow_right" />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/item_margin_large"
        android:background="@drawable/btn_ok"
        android:text="退出"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>