<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4e7e9"
    tools:context="com.android.andy.yubang.ui.ShoppingMallActivity">

    <RelativeLayout
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="49.5dip">
        <ImageView
            android:id="@+id/titleBg"
            android:background="@drawable/common_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_back"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/common_title_back_selector"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/shoppingmall_search_imageview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/lib_story_img_search_bt"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:maxWidth="180.0dip"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/common_layout_title"
            android:textSize="20sp"
            android:text="商城"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shoppingmall_banner_rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.android.andy.yubang.banner.FlashView
                    android:id="@+id/shoppingmall_flashview_banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    >
                </com.android.andy.yubang.banner.FlashView>
            </RelativeLayout>
            <!-- 导航  6个标签-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF2F2F2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/speciese_01"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_baoyangweihu_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_02"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_dianzi_dianlu_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_03"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_fadongji_peijian_selector"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF2F2F2"
                    >
                    <ImageView
                        android:id="@+id/speciese_04"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_dipan_peijian_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_05"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_chejia_peijian_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_06"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_tuoija_peijian_selector"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>



            </LinearLayout>

            <include
                android:id="@+id/shoppingmall01"
                layout="@layout/item_shoppingmall_baoyangweihu"/>
            <include
                android:id="@+id/shoppingmall02"
                layout="@layout/item_shoppingmall_dianzidianlu"/>
            <include
                android:id="@+id/shoppingmall03"
                layout="@layout/item_shoppingmall_fadongji_jian"/>
            <include
                android:id="@+id/shoppingmall04"
                layout="@layout/item_shoppingmall_dipan_peijian"/>
            <include
                android:id="@+id/shoppingmall05"
                layout="@layout/item_shoppingmall_chejia_peijian"/>
            <include
                android:id="@+id/shoppingmall06"
                layout="@layout/item_shoppingmall_tuojia_peijian"/>

        </LinearLayout>
    </ScrollView>



