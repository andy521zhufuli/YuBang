<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context="com.android.andy.yubang.ui.ShoppingMallActivity">

    <RelativeLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/head_bg_color"
        >

        <!--<ImageView-->
            <!--android:id="@+id/img_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_margin="6dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:visibility="gone"-->
            <!--android:src="@drawable/common_title_back_selector" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商城"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"

            />

        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->

        <ImageView
            android:id="@+id/shoppingmall_search_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_topbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shoppingmall_banner_rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.android.andy.yubang.banner.FlashView
                    android:id="@+id/shoppingmall_flashview_banner"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    >
                </com.android.andy.yubang.banner.FlashView>
            </RelativeLayout>
            <!-- 导航  6个标签-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF2F2F2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/speciese_01"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_baoyangweihu_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_02"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_dianzi_dianlu_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_03"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_fadongji_peijian_selector"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF2F2F2"
                    >
                    <ImageView
                        android:id="@+id/speciese_04"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_dipan_peijian_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_05"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_chejia_peijian_selector"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/speciese_06"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shoppingmall_tuoija_peijian_selector"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>



            </LinearLayout>

            <include
                android:id="@+id/shoppingmall01"
                layout="@layout/item_shoppingmall_baoyangweihu"/>
            <include
                android:id="@+id/shoppingmall02"
                layout="@layout/item_shoppingmall_dianzidianlu"/>
            <include
                android:id="@+id/shoppingmall03"
                layout="@layout/item_shoppingmall_fadongji_jian"/>
            <include
                android:id="@+id/shoppingmall04"
                layout="@layout/item_shoppingmall_dipan_peijian"/>
            <include
                android:id="@+id/shoppingmall05"
                layout="@layout/item_shoppingmall_chejia_peijian"/>
            <include
                android:id="@+id/shoppingmall06"
                layout="@layout/item_shoppingmall_tuojia_peijian"/>

        </LinearLayout>
    </ScrollView>



