<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4e7e9"
    tools:context="com.android.andy.yubang.ui.ShoppingMallActivity">

    <RelativeLayout
        android:id="@+id/common_title"
        android:layout_width="fill_parent"
        android:layout_height="49.5dip">
        <ImageView
            android:id="@+id/titleBg"
            android:background="@drawable/common_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/title_back"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/common_title_back_selector"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/shoppingmall_search_imageview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10.0dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/lib_story_img_search_bt"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:maxWidth="180.0dip"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/common_layout_title"
            android:textSize="20sp"
            android:text="商城"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/shoppingmall_banner_rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.android.andy.yubang.banner.FlashView
                    android:id="@+id/shoppingmall_flashview_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >
                </com.android.andy.yubang.banner.FlashView>
            </RelativeLayout>


            <com.android.andy.yubang.view.ForbiddenScrollGridView
                android:id="@+id/shoppingmall_species_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="5dp"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:layout_below="@id/shoppingmall_banner_rlayout"
                />

            <!-- 物品-->
            <RelativeLayout
                android:id="@+id/iwant_get_cash_account_weixin_account_layout"
                android:layout_marginTop="20dp"
                android:paddingLeft="23.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="43.0dip"
                >
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/holo_green_dark"
                    android:id="@+id/iwant_get_cash_account_weixin_account_text"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保养维护"
                    android:layout_centerVertical="true" />

                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/holo_green_dark"
                    android:id="@+id/discover_activity_recommend_partners_account_text1"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:layout_toLeftOf="@+id/iwant_get_cash_account_weixin_account_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iwant_get_cash_account_weixin_account_arrow"
                    android:paddingRight="20.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/android_list_idex"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/main_product1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="主打产品1"
                    android:gravity="center"
                    />

                <View android:layout_width="1.0px" android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                    style="@style/line_vertical" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="主打产品2"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="产品3"
                    android:gravity="center"
                    />
                <View android:layout_width="1.0px" android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                    style="@style/line_vertical" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="产品4"
                    android:gravity="center"
                    />
                <View android:layout_width="1.0px" android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                    style="@style/line_vertical" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="产品5"
                    android:gravity="center"
                    />
                <View android:layout_width="1.0px" android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                    style="@style/line_vertical" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="产品6"
                    android:gravity="center"
                    />
            </LinearLayout>
            <!-- 物品-->
            <RelativeLayout
                android:id="@+id/iwant_get_cash_account_weixin_account_layout1"
                android:layout_marginTop="20dp"
                android:paddingLeft="23.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="43.0dip">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/holo_green_dark"
                    android:id="@+id/iwant_get_cash_account_weixin_account_text1"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保养维护"
                    android:layout_centerVertical="true" />


                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/holo_green_dark"
                    android:id="@+id/discover_activity_recommend_partners_account_text11"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:layout_toLeftOf="@+id/iwant_get_cash_account_weixin_account_arrow1"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iwant_get_cash_account_weixin_account_arrow1"
                    android:paddingRight="20.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/android_list_idex"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="主打产品1"
                    android:gravity="center"
                    />
                <View android:layout_width="1.0px" android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true"
