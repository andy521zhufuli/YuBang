<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/marker_shop_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:text="1"
        android:textSize="@dimen/large_text_size"
        android:gravity="center_vertical|center_horizontal"
        android:background="@mipmap/first_page_location_shop_num"
        />


    <LinearLayout
        android:id="@+id/marker_ll_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/marker_one_1"
        >
        <TextView
            android:id="@+id/marker_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_line_3"
            android:textSize="@dimen/small_middle_text_size"
            android:text="中海维修"
            android:layout_marginTop="1dp"
            android:padding="3dp"
            />

    </LinearLayout>



</LinearLayout>