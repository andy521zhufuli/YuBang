<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    android:orientation="vertical"
    tools:context="com.car.yubangapk.ui.ShoppingMallPaymentAddBankCardActivity">

    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_margin="6dp"
            android:paddingRight="30dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加银行卡"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/TopbarStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="银行卡验证"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="欢迎来自驭帮的用户,您正在验证银行卡."
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/account_name"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_account_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="开户姓名"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/account_id_num"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_account_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="有效证件号码"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/account_bank_num"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_account_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="银行卡号"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/account_existed_phone_num"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_account_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="预留手机号"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/account_verify_message_code"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_account_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="短信验证码"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size" />

            <Button
                android:id="@+id/btn_verify_bank_account"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="18dp"
                android:background="@drawable/btn_ok"
                android:text="验 证"
                android:textColor="@color/btn_login_text"
                android:enabled="false" />

        </LinearLayout>

    </ScrollView>







</LinearLayout>
