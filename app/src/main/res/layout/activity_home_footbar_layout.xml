<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" 
    >
    
    <LinearLayout 
        android:background="#FFE5E5E5"
        android:layout_width="fill_parent" 
        android:layout_height="50.0dip" 
        android:layout_alignParentBottom="true">
	    
        <RelativeLayout 
            android:id="@+id/layout_firstpage"
            android:background="@color/cart_bottom_show_view_bg1"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_firstpage_foot"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:src="@mipmap/tabhost_all_dark_press"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/goods_detail_goto_shoppingcar_layout"
            android:background="@color/cart_bottom_show_view_bg1"
            android:visibility="visible" android:layout_width="0.0dip"
            android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView
                android:id="@+id/main_activity_footer__shoppingmall"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:src="@mipmap/tabhost_shoppingcar_bnormal"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                />

            <!-- 购物车有几件商品的提示小图标-->
            <LinearLayout
                android:paddingLeft="24.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="@dimen/goods_detail_shoppingcar_textsize"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/main_activity_footer_shoppingcar_number"
                    android:background="@drawable/goods_detail_shopping_car_icon"
                    android:paddingLeft="@dimen/product_detail_shoppingcar_padding"
                    android:paddingRight="@dimen/product_detail_shoppingcar_padding"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/product_detail_shoppingcar_height"
                    android:layout_marginTop="3.0dip"
                    android:text="10"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!-- 发现 -->
        <RelativeLayout
            android:id="@+id/layout_discover"
            android:background="@color/cart_bottom_show_view_bg1"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/image_discover_foot"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:src="@mipmap/tabhost_discover_normal"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <FrameLayout android:id="@+id/layout_me"
            android:background="@color/cart_bottom_show_view_bg1"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0">
            <ImageView
                android:layout_gravity="center" 
                android:id="@+id/image_me_foot" 
                android:layout_width="wrap_content" 
                android:layout_height="38.0dip" 
                android:src="@mipmap/tabhost_my_normal"
                android:scaleType="fitCenter" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>