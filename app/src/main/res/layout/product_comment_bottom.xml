<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:id="@+id/ll_comment_contanier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        >
        <LinearLayout android:gravity="center_vertical"
            android:orientation="horizontal" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip">
            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12.0sp"
                    android:textColor="@color/car_name_lack"
                    android:id="@+id/tv_comment_user_phone"
                    android:text="15656565656"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
                <RatingBar
                    android:id="@+id/rb_comment_star" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip" android:numStars="5"
                    android:isIndicator="true" style="@style/roomRatingBar" />
            </LinearLayout>
            <TextView android:textSize="12.0sp" android:textColor="@color/car_name_lack"
                android:id="@+id/tv_comment_user_date" android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:visibility="visible"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:text="dfd "
                android:layout_weight="1.0" />
        </LinearLayout>
        <TextView android:textSize="12.0sp"
            android:textColor="#ff8f8f8f"
            android:ellipsize="end"
            android:id="@+id/tv_comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论"
            android:maxLines="3" />


        <LinearLayout
            android:id="@+id/comment_pic_layout"
            android:layout_marginTop="10.0dip"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/comment_pic1"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/comment_pic2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/comment_pic3"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/comment_pic4"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_bottom_load_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView android:background="@drawable/fengexian" android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                />
            <TextView android:textSize="13.0sp" android:textColor="@color/car_name_lack"
                android:ellipsize="end" android:gravity="center" android:id="@+id/tv_comment_show_more"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" android:layout_marginBottom="10.0dip"
                android:text="查看更多评价" android:maxLines="1" />
            <ImageView android:background="@drawable/fengexian" android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>