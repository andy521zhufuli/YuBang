<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.car.yubangapk.ui.ShoppingmallProductModifyActivity">


    <include
        android:id="@+id/include1"
        layout="@layout/yubang_page_header"/>

    <ListView
        android:layout_below="@+id/include1"
        android:id="@+id/product_service_modify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"
        >
    </ListView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bukejian"

        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/info_check_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_ok"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="确定"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"
            />

    </LinearLayout>
</RelativeLayout>
