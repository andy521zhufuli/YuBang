<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="116.0dip">
        <ImageView android:id="@+id/my_recommended_partners_shop_image"
            android:layout_width="104.0dip" android:layout_height="92.0dip"
            android:scaleType="centerCrop" />
        <LinearLayout android:orientation="vertical"
            android:id="@+id/info_container"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="4.0dip" android:layout_marginBottom="4.0dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="门店: "
                    android:id="@+id/order_id"
                    android:paddingLeft="15.0dip"

                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"

                    />

                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:id="@+id/my_recommended_partners_shop_name"
                    android:paddingLeft="1.0dip"
                    android:paddingRight="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="地址: "
                    android:id="@+id/order_id2"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    />

                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:id="@+id/my_recommended_partners_shop_address"
                    android:paddingLeft="1.0dip"
                    android:paddingRight="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="电话: "
                    android:id="@+id/order_id4"
                    android:paddingLeft="15.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    />

                <TextView android:textSize="@dimen/text_14"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:id="@+id/my_recommended_partners_phone_num"
                    android:paddingLeft="1.0dip"
                    android:paddingRight="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_weight="1.0" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <View android:background="@color/order_divider" android:layout_width="fill_parent"
        android:layout_height="1.0px" />

</LinearLayout>


