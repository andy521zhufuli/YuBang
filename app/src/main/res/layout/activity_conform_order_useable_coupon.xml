<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.car.yubangapk.ui.ConformOrderUseableCouponActivity">

    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        android:layout_alignParentTop="true"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_margin="6dp"
            android:paddingRight="10dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="可用优惠券"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>



    <ListView
        android:layout_below="@+id/layout_category_topbar"
        android:id="@+id/conform_order_useable_coupon_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pay"
        >

    </ListView>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:background="@drawable/btn_add_to_cart" >

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:includeFontPadding="false"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/white"
            android:text="确定使用"
            android:gravity="center_horizontal|center_vertical"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>
