<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"

    tools:context="com.car.yubangapk.ui.AlterUserBaseInfoActivity">


    <RelativeLayout
        android:id="@+id/layout_sign_up_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:src="@drawable/common_title_back_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改基本信息"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>



    <View
        android:id="@+id/view111"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_sign_up_topbar"
        android:layout_marginLeft="64dp"
        android:background="#ffcccccc" />

    <RelativeLayout
        android:id="@+id/text111"
        android:layout_below="@+id/view111"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/alter_base_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="旧密码："
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size" />

        <EditText
            android:id="@+id/alter_base_info_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/item_margin_large"
            android:layout_toRightOf="@+id/alter_base_info_tv"
            android:background="@null"
            android:hint="旧密码"
            android:singleLine="true"
            android:maxLength="32"
            android:textSize="@dimen/small_middle_text_size" />
    </RelativeLayout>


    <View
        android:id="@+id/view222"
        android:layout_below="@+id/text111"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="64dp"
        android:background="#ffcccccc" />


    <Button
        android:id="@+id/alter_base_info_btn_alter"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="@dimen/item_margin_large"

        android:background="@drawable/btn_ok"
        android:text="确认修改"
        android:layout_centerInParent="true"
        android:textColor="@color/btn_login_text"
        />

</RelativeLayout>
