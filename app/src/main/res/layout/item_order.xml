<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:id="@+id/order_item" android:layout_width="fill_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:layout_width="0.0dip" android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <View android:background="@color/order_divider" android:layout_width="fill_parent" android:layout_height="1.0px" />
        <RelativeLayout android:gravity="center_vertical" android:paddingLeft="12.0dip" android:paddingRight="12.0dip" android:layout_width="fill_parent" android:layout_height="44.0dip">
            <ImageView android:gravity="center" android:id="@+id/logo"
                android:layout_width="16.0dip" android:layout_height="16.0dip"
                android:scaleType="centerCrop" android:layout_alignParentLeft="true"
                android:layout_centerInParent="true" />

            <TextView android:textSize="@dimen/text_16"
                android:textColor="@color/black" android:gravity="center|left"
                android:id="@+id/order_item_name"
                android:layout_width="fill_parent"
                android:text="大保养"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip" android:layout_marginRight="20.0dip" android:singleLine="true"
                android:layout_toRightOf="@+id/logo" />
        </RelativeLayout>
        <View android:background="@color/order_divider" android:layout_width="fill_parent" android:layout_height="1.0px" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal" android:padding="10.0dip"
            android:layout_width="fill_parent" android:layout_height="120.0dip">
            <ImageView android:id="@+id/order_item_image"
                android:layout_width="104.0dip"
                android:layout_height="92.0dip"
                android:scaleType="centerCrop" />
            <LinearLayout android:orientation="vertical"
                android:id="@+id/info_container"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="4.0dip" android:layout_marginBottom="4.0dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="单号: "
                        android:id="@+id/order_id"
                        android:paddingLeft="15.0dip"

                        android:layout_width="wrap_content"
                        android:layout_height="30.0dip"

                        />

                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:id="@+id/order_item_number"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="时间: "
                        android:id="@+id/order_id2"
                        android:paddingLeft="15.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="30.0dip"
                        />

                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:id="@+id/order_item_subtime_time"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="数量: "
                        android:id="@+id/order_id4"
                        android:paddingLeft="15.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="30.0dip"
                        />

                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:id="@+id/order_item_amount"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_weight="1.0" />
                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="总价: "
                        android:id="@+id/order_id6"
                        android:paddingLeft="15.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="30.0dip"
                        />

                    <TextView android:textSize="@dimen/text_14"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:id="@+id/order_item_total_price"
                        android:paddingLeft="1.0dip"
                        android:paddingRight="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
        <View android:background="@color/order_divider" android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/bottom_container"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="40.0dip">

            <TextView android:textSize="@dimen/text_15"
                android:textColor="#ff999999"
                android:id="@+id/expiring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:singleLine="true"
                android:text="订单状态: "
                android:drawablePadding="4.0dip"
                android:layout_centerVertical="true" />

            <TextView android:textSize="@dimen/text_15"
                android:gravity="center" android:id="@+id/order_item_status" android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:singleLine="true"
                android:text="交易成功"
                />

        </LinearLayout>
        <View android:background="@color/order_divider"
            android:layout_width="fill_parent" android:layout_height="1.0px" />
    </LinearLayout>

</LinearLayout>